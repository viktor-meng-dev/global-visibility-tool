<% include ./partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/login.css">


<div class="container" id="gvt-heading">
	<h1>GLOBAL VISIBILITY TOOL</h1>
</div>

<div class="container" id="login-form">
  <form method='POST' action="/login">
    <div class="form-group">
      <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Email" name="email" required>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
    </div>
    <button type="submit" class="btn btn-outline-danger btn-block btn-lg">Login</button>
  </form>
</div>


<% include ./partials/footer %>